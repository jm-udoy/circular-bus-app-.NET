@model Circular_Bus_App.Models.Database.User
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<h2>Resister</h2>

<form action="/User/Create" method="post">
    <input type="text" name="U_UserName" value="@Model.U_UserName" placeholder="UserName" class="form-control" />
    @Html.ValidationMessageFor(model => model.U_UserName, "", new { @class = "text-danger" })
    <input type="password" name="U_Password" value="@Model.U_Password" placeholder="Password" class="form-control" />
    @Html.ValidationMessageFor(model => model.U_Password, "", new { @class = "text-danger" })
    <input type="text" name="U_Phone" value="@Model.U_Phone" placeholder="Phone" class="form-control" />
    @Html.ValidationMessageFor(model => model.U_Phone, "", new { @class = "text-danger" })
    <input type="text" name="U_Email" value="@Model.U_Email" placeholder="Email" class="form-control" />
    @Html.ValidationMessageFor(model => model.U_Email, "", new { @class = "text-danger" })
    <input type="text" name="U_Address" value="@Model.U_Address" placeholder="Address" class="form-control" />
    @Html.ValidationMessageFor(model => model.U_Address, "", new { @class = "text-danger" })
    <input type="text" name="U_Gender" value="@Model.U_Gender" placeholder="Gender" class="form-control" />
    @Html.ValidationMessageFor(model => model.U_Gender, "", new { @class = "text-danger" })
    <input type="text" name="U_DateofBirth" value="@Model.U_DateofBirth" placeholder="DateofBirth" class="form-control" />
    @Html.ValidationMessageFor(model => model.U_DateofBirth, "", new { @class = "text-danger" })
    <input type="text" name="U_Role" value="@Model.U_Role" placeholder="Role" class="form-control" />
    @Html.ValidationMessageFor(model => model.U_Role, "", new { @class = "text-danger" })



    <input type="submit" value="Add" />

</form>
