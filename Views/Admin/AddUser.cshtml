@model Circular_Bus_App.Models.Database.User
@{
    ViewBag.Title = "AddUser";
}
<style>
    .error {
        color: red;
    }
</style>
<h2>Add User</h2>

@using (Html.BeginForm("AddUser", "Admin", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(x => x.U_Id)
            <label>Name</label>
            @Html.ValidationMessageFor(x => x.U_UserName, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.U_UserName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Password</label>
            @Html.ValidationMessageFor(x => x.U_Password, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.U_Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Phone</label>
            @Html.ValidationMessageFor(x => x.U_Phone, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.U_Phone, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.ValidationMessageFor(x => x.U_Email, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.U_Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Address</label>
            @Html.ValidationMessageFor(x => x.U_Address, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.U_Address, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Gender</label>
            @Html.ValidationMessageFor(x => x.U_Gender, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.U_Gender, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Date Of Birth (DD-MM-YYY)</label>
            @Html.ValidationMessageFor(x => x.U_DateofBirth, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.U_DateofBirth, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Role</label>
            @Html.TextBoxFor(x => x.U_Role, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Status</label>
            @Html.TextBoxFor(x => x.U_DateofBirth, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-warning">Cancel</button>
        </div>
    </div>
}