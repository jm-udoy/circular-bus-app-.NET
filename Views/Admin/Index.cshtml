
@model Circular_Bus_App.Models.Database.Admin

<div class="row bg-primary" style="padding:10px;">
    <div class="col-lg-10">
        <h1 class="text-uppercase text-center">Admin Dashboard</h1>
    </div>
    <div class="col-lg-2">
        <a href="/admin/logout" class="btn btn-danger" style="width:100%; margin-top: 20px;">Logout</a>
    </div>
</div>

@*User button *@
<a href="/admin/userlist" style="">
    <div class="btn btn-primary" style="padding:20px; margin:30px; min-width:300px;">
        <p><i class="glyphicon glyphicon-user" style="font-size:70px;"></i></p>
        <span class="text-uppercase" style="font-size:20px; padding:15px;">User List</span>
    </div>
</a>

@*Bus info button *@
<a href="/admin/businfolist" style="">
